server {
  listen 80;
  server_name _;

  root /usr/share/nginx/html;
  index index.html;

  # İsteğe göre proxy örneği (gerekirse aç)
  location /api/ {
    proxy_pass http://${BACKEND_URL}/api/;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
  }

  location / {
    try_files $uri $uri/ /index.html;
  }
}
